# --- LLM Configuration ---
# MODEL_PROVIDER must be 'openrouter' or 'local'
MODEL_PROVIDER=openrouter

# OpenRouter API (for LLM inference)
OPENROUTER_API_KEY="sk-or-v1-..."

# OpenAI API Key (for embeddings, e.g. text-embedding-3-small)
OPENAI_API_KEY="sk-..."

# Local LLM (only used when MODEL_PROVIDER=local)
# OPENAI_BASE_URL=http://localhost:1234/v1


# --- Database Configuration ---
# Option 1: Individual Connection Parameters (Preferred for Supabase Transaction Pooler)
# Note: 'user', 'password', 'host', 'port', 'dbname' are used by pgvectordb.py
user=postgres.your-project-ref
password=your-password
host=aws-0-region.pooler.supabase.com
port=6543
dbname=postgres

# Option 2: Connection String (Alternative)
# DATABASE_URL=postgresql://user:password@host:port/dbname